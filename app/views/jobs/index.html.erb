<h1>Listing jobs</h1>

<table>
  <tr>
    <th>Concern</th>
    <th>Cause</th>
    <th>Correction</th>
    <th>State</th>
    <th>Sorted</th>
    <th>Notes</th>
    <th>Ticket</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= job.concern %></td>
    <td><%= job.cause %></td>
    <td><%= job.correction %></td>
    <td><%= job.state %></td>
    <td><%= job.sorted %></td>
    <td><%= job.notes %></td>
    <td><%= job.ticket %></td>
    <td><%= link_to 'Show', job %></td>
    <td><%= link_to 'Edit', edit_job_path(job) %></td>
    <td><%= link_to 'Destroy', job, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

