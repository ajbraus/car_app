<h1>Listing vehicles</h1>

<table>
  <tr>
    <th>Vin</th>
    <th>Make</th>
    <th>Model</th>
    <th>Year</th>
    <th>Plate</th>
    <th>Color</th>
    <th>Notes</th>
    <th>Cardinal owner</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @vehicles.each do |vehicle| %>
  <tr>
    <td><%= vehicle.vin %></td>
    <td><%= vehicle.make %></td>
    <td><%= vehicle.model %></td>
    <td><%= vehicle.year %></td>
    <td><%= vehicle.plate %></td>
    <td><%= vehicle.color %></td>
    <td><%= vehicle.notes %></td>
    <td><%= vehicle.cardinal_owner %></td>
    <td><%= link_to 'Show', vehicle %></td>
    <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
    <td><%= link_to 'Destroy', vehicle, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

